@{
    ViewBag.Title = "Auto anmelden";
}

    <div class="menu-container">
         <a href="/Autoübersicht/autoübersicht"><img src="../../assets/arrow-left.png" alt="arrow left" class="arrow-left" /></a>
        <h1 class="main-title">AUTO REGISTRATION</h1>
        <h2 class="login-register-title"><a href="/login">LOGOUT</a></h2>
    </div>
    <div class="content">
        <div class="side-title">
            <h2 class="event-title">CHLAUSTURNIER FLAWIL</h2>
