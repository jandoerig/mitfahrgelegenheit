            <form class="anmelde-form" action="/" method="post">
                <div class="input-and-line">
                    <input type="text" name="name" placeholder="FAHRERNAME" />
                    <div class="input-line"></div>
                </div>
                <div class="input-and-line">
                    <input type="text" name="name" placeholder="TREFFPUNKT" />
                    <div class="input-line"></div>
                </div>
                <div class="input-and-line">
                    <input type="text" name="name" placeholder="FREIE PLÄTZE" />
                    <div class="input-line"></div>
                </div>
                <div class="input-and-line">
                    <input type="text" name="name" placeholder="ABFAHRTSZEIT" />
                    <div class="input-line"></div>
                </div>
            </form>
        </div>
        <div class="submit-button">
            <button class="event-button">ANMELDEN</button>
        </div>
    </div>